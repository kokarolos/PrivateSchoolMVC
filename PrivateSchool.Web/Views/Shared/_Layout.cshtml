<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
        <div class="wrapper">
            @*NavBar*@
            <div>
                @RenderPage("Components/_NavBar.cshtml")
            </div>
        </div>
<div class="container">
        @*Main*@
            <div class="row">
                <div class="col-sm-2">
                    @RenderPage("Components/_SideBar.cshtml")
                </div>
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
            <div>
                @RenderPage("Components/_Footer.cshtml")
            </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
